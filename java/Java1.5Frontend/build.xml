<!--
 Targets for working from terminal window:
       build (default) - generates java files and compiles them
       clean           - removes all generated files and class files
-->
<project name="Bytecode backend" default="build">

<!-- "package" is the directory where generated files will be stored -->
<property name="package" value="AST"/>

<!-- "tools" is the directory where generators and libraries are located. -->
<property name="tools" value="../Java1.4Frontend/tools"/>
	
<!-- "jflex" is an ant task class for the scanner generator in JFlex.jar -->
<taskdef name="jflex" classname="JFlex.anttask.JFlexTask" classpath="../Java1.4Frontend/tools/JFlex.jar"/>
<!-- "beaver" is an ant task class for the parser generator in beaver.jar -->
<taskdef name="beaver" classname="beaver.comp.run.AntTask" classpath="../Java1.4Frontend/tools/beaver.jar"/>
<!-- "jastadd" is an ant task class in jastadd2.jar -->
<taskdef name="jastadd" classname="jastadd.JastAddTask" classpath="../Java1.4Frontend/tools/jastadd2.jar"/>

<!-- generate compiler source files and compile sources -->
<target name="build">
  <!-- create AST node types and weave aspect modules -->
  <jastadd package="${package}" rewrite="true" beaver="true" novisitcheck="true"
           outdir="${basedir}" lazyMaps="true" noInhEqCheck="true">
		<fileset dir="../Java1.4Frontend">
			<include name="**/*.ast"/>
			<include name="**/*.jrag"/>
			<include name="**/*.jadd"/>      
		</fileset>
		<fileset dir="../BytecodeBackend">
			<include name="**/*.ast"/>
			<include name="**/*.jrag"/>
			<include name="**/*.jadd"/>
		</fileset>
		<fileset dir=".">
			<include name="**/*.ast"/>
			<include name="**/*.jrag"/>
		</fileset>
  </jastadd>
  <!-- generate the scanner -->
	<jflex file="java15.flex" outdir="parser" nobak="yes"/>
  <!-- generate the parser phase 1, create a full .lalr specification from fragments-->
  <concat destfile="parser/JavaParser.all" binary="true" force="no">
    <!--<fileset dir="../Java1.4Frontend">
      <include name="parser/java14.parser"/>
    </fileset>-->
    <fileset dir=".">
      <include name="java14.parser"/>
    </fileset>
    <fileset dir=".">
      <include name="*.parser"/>
      <exclude name="java14.parser"/>
    </fileset>
  </concat>
  <!-- generate the parser phase 2, translating .lalr to .beaver -->
	<java classpath="${tools}/proj.jar:${tools}/beaver-rt.jar" classname="Main" fork="true" dir="${basedir}">
		<arg line="parser/JavaParser.all parser/JavaParser.beaver"/>
	</java>
  <!-- generate the parser phase 3, translating .beaver to .java -->
  <beaver file="parser/JavaParser.beaver" terminalNames="yes" compress="yes" useSwitch="yes"/>
  <!-- copy library files-->
  <copy todir="beaver" preservelastmodified="true">
    <fileset dir="../Java1.4Frontend/beaver"/>
  </copy>
  <!-- copy todir="bytecode" preservelastmodified="true">
    <fileset dir="../Java1.4Frontend/bytecode"/>
  </copy -->
  <copy todir="parser" file="../Java1.4Frontend/parser/Unicode.java" preservelastmodified="true"/>


  <!-- compile sources compiler="jikes" nowarn="true"-->
  <javac debug="true" nowarn="true" srcdir="." sourcepath="" classpath=".:${tools}/beaver-rt.jar:${tools}/junit.jar"
         fork="true" memoryMaximumSize="128M">
    <include name ="*.java"/>
    <include name ="AST/*.java"/>
    <include name ="bytecode/**/*.java"/>
    <include name ="parser/**/*.java"/>
    <include name ="beaver/**/*.java"/>
    <exclude name ="jdk/**/*.java"/>
  </javac>
</target>

<!-- remove generated source files and .class files -->
<target name="clean">
    <delete dir="${package}"/>
    <!-- delete all .class files recursively -->
    <delete>
      <fileset dir="." includes="bytecode/**/*.class"/>
      <fileset dir="." includes="parser/**/*.class"/>
      <fileset dir="." includes="*.class"/>
    </delete>
    <delete>
      <fileset dir="parser" includes="*.java"/>
      <fileset dir="parser" includes="JavaParser.beaver"/>
      <fileset dir="parser" includes="JavaParser.all"/>
    </delete>
</target>


<!-- build a source distribution -->
<target name="source" depends="build">
  <jar destfile="Java1.5Frontend-src.jar">
			<fileset dir="..">
        <!-- include backend source file -->
				<include name="Java1.5Frontend/JavaCompiler.java"/>
				<include name="Java1.5Frontend/JavaPrettyPrinter.java"/>
				<include name="Java1.5Frontend/**/*.ast"/>
				<include name="Java1.5Frontend/**/*.jrag"/>
				<include name="Java1.5Frontend/**/*.jadd"/>
        <!-- include parser and scanner -->
				<include name="Java1.5Frontend/**/*.parser"/>
				<include name="Java1.5Frontend/java15.flex"/>
        <!-- include bytecode reader -->
				<include name="Java1.5Frontend/bytecode/*.java"/>
        <!-- include buildfile used to build the backend -->
				<include name="Java1.5Frontend/build.xml"/>
        <!-- include readme and licence -->
				<include name="Java1.5Frontend/README"/>
				<include name="Java1.5Frontend/licences/BSD"/>
			</fileset>
      <manifest>
      </manifest>
  </jar>
</target>

</project>

