  eq TypeVariable.isSupertypeOfArrayDecl(ArrayDecl type) {
    for(int i = 0; i < getNumTypeBound(); i++)
      if(type.instanceOf(getTypeBound(i).type())) {
        return true;
      }
    return false;
  }

  syn boolean TypeDecl.isSupertypeOfTypeVariable(TypeVariable type) {
    if(type == this) {
      System.err.println("  " + type.fullName() + " is a subtype of " + fullName() + "! ");
      return true;
    }
    for(int i = 0; i < type.getNumTypeBound(); i++)
      if(type.getTypeBound(i).type().instanceOf(this)) {
        System.err.println("  " + type.fullName() + " is a subtype of " + fullName() + "! ");
        return true;
      }
    System.err.println("  " + type.fullName() + " is not a subtype of " + fullName() + "! ");
    return false;
    //return type == this;
  }

